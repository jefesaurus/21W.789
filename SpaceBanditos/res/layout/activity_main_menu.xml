<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenuActivity" >
    
	<LinearLayout
	    android:id="@+id/main_menu_button_stack"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" 
    	android:layout_alignParentBottom="true" >
    	
	    <Button
	        android:id="@+id/new_game_button"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/line_large_half_thickness"
	        android:layout_marginTop="@dimen/line_large_half_thickness"
	        android:layout_marginRight="@dimen/line_large_half_thickness"
	        android:layout_marginBottom="@dimen/line_large_half_thickness"
            android:background="@drawable/button_background_large"
		    android:text="NEW GAME"
	        android:textSize="@dimen/font_size_large"
	        android:textColor="@android:color/black"
	        android:singleLine="true"
		    android:onClick="onNewGameButtonClick"/>
	    <Button
	        android:id="@+id/continue_button"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/line_large_half_thickness"
	        android:layout_marginTop="@dimen/line_large_half_thickness"
	        android:layout_marginRight="@dimen/line_large_half_thickness"
	        android:layout_marginBottom="@dimen/line_large_half_thickness"
            android:background="@drawable/button_background_large"
		    android:text="CONTINUE GAME"
	        android:textSize="@dimen/font_size_large"
	        android:textColor="@android:color/black"
	        android:singleLine="true"
		    android:onClick="onContinueGameButtonClick"/>
	    <Button
	        android:id="@+id/settings_button"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/line_large_half_thickness"
	        android:layout_marginTop="@dimen/line_large_half_thickness"
	        android:layout_marginRight="@dimen/line_large_half_thickness"
	        android:layout_marginBottom="@dimen/line_large_half_thickness"
            android:background="@drawable/button_background_large"
		    android:text="SETTINGS"
	        android:textSize="@dimen/font_size_large"
	        android:textColor="@android:color/black"
	        android:singleLine="true"
		    android:onClick="onSettingsButtonClick"/>
	</LinearLayout>
	<ImageView
		android:id="@+id/splash_image"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_centerHorizontal="true"
    	android:scaleType="fitCenter"
    	android:src="@drawable/splash2" 
    	android:layout_above="@id/main_menu_button_stack" />
</RelativeLayout>
