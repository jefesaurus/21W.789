
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PlayerShipActivity" >
    


	<LinearLayout
	    	        android:id="@+id/main_menu_button_stack"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" 
    	android:layout_alignParentBottom="true" >
    	

	    <Button
	        android:id="@+id/new_game_button"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="New Game"
		    android:onClick="onNewGameButtonClick"/>
	    <Button
	        android:id="@+id/continue_button"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Continue Game"
		    android:onClick="onContinueGameButtonClick"/>
	    <Button
	        android:id="@+id/settings_button"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Muh sett'ns"
		    android:onClick="onSettingsButtonClick" />
	</LinearLayout>
			    	<ImageView
		 android:id="@+id/splash_image"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_centerHorizontal="true"
    	android:scaleType="fitCenter"
    	android:src="@drawable/splash2" 
    	android:layout_above="@id/main_menu_button_stack"/>
</RelativeLayout>