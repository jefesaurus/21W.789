<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spacebanditos="http://schemas.android.com/apk/res/com.chipotlebanditos.spacebanditos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <com.chipotlebanditos.spacebanditos.views.LayeredSegmentFillBar
        android:id="@+id/power_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ship_system_view_line_half_thickness"
        android:layout_marginTop="@dimen/ship_system_view_line_half_thickness"
        android:layout_marginRight="@dimen/ship_system_view_line_half_thickness"
        android:layout_marginBottom="@dimen/ship_system_view_line_half_thickness"
        spacebanditos:segmentDrawable="@drawable/power_bar_segment_small"
        spacebanditos:baseDirection="bottom"
        spacebanditos:segmentWidth="@dimen/ship_system_view_power_bar_segment_width"
        spacebanditos:segmentHeight="@dimen/ship_system_view_power_bar_segment_height"
        spacebanditos:segmentSpacing="@dimen/ship_system_view_line_half_thickness"
        android:background="@drawable/base_background_small"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
	    <TextView
	        android:id="@+id/system_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/ship_system_view_line_half_thickness"
	        android:layout_marginTop="@dimen/ship_system_view_line_half_thickness"
	        android:layout_marginRight="@dimen/ship_system_view_line_half_thickness"
	        android:layout_marginBottom="@dimen/ship_system_view_line_half_thickness"
	        android:textSize="@dimen/small_font_size"
	        android:textColor="@android:color/black"
	        android:singleLine="true"
	        android:textIsSelectable="false"/>
	    <ImageView
	        android:id="@+id/system_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/ship_system_view_line_half_thickness"
	        android:layout_marginTop="@dimen/ship_system_view_line_half_thickness"
	        android:layout_marginRight="@dimen/ship_system_view_line_half_thickness"
	        android:layout_marginBottom="@dimen/ship_system_view_line_half_thickness"/>
    </LinearLayout>
    <com.chipotlebanditos.spacebanditos.views.LayeredSegmentFillBar
        android:id="@+id/weapon_charge_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/ship_system_view_line_half_thickness"
        android:layout_marginTop="@dimen/ship_system_view_line_half_thickness"
        android:layout_marginRight="@dimen/ship_system_view_line_half_thickness"
        android:layout_marginBottom="@dimen/ship_system_view_line_half_thickness"
        spacebanditos:segmentDrawable="@drawable/weapon_charge_bar_segment_small"
        spacebanditos:baseDirection="bottom"
        spacebanditos:segmentWidth="@dimen/ship_system_view_weapon_charge_bar_segment_width"
        spacebanditos:segmentHeight="@dimen/ship_system_view_weapon_charge_bar_segment_height"
        spacebanditos:segmentSpacing="@dimen/ship_system_view_weapon_charge_bar_segment_spacing"
        android:background="@drawable/ship_system_view_weapon_charge_bar_background"/>
</merge>