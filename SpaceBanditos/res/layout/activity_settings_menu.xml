
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PlayerShipActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="@dimen/list_top_spacing">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_top_spacing"
            android:text="Sett&apos;ns"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return" 
            android:layout_alignParentRight="true"
            android:onClick="onReturnButtonClick"/>

    </RelativeLayout>

		<TableLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >

		    <TableRow
		        android:id="@+id/TableRow03"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:layout_marginBottom="@dimen/list_elt_spacing">
		        

		        <TextView
		            android:id="@+id/TextView03"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Music Volume"
		            android:textAppearance="?android:attr/textAppearanceSmall"
		            android:layout_weight=".2"/>

		        <SeekBar
		            android:id="@+id/SeekBar01"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" 
		            android:layout_weight=".8"/>
		    </TableRow>

		    <TableRow
		        android:id="@+id/TableRow01"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="@dimen/list_elt_spacing" >

		        <TextView
		            android:id="@+id/TextView01"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="SFX Volume"
		            android:textAppearance="?android:attr/textAppearanceSmall"
		            android:layout_weight=".2"/>

		        <SeekBar
		            android:id="@+id/seekBar1"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" 
		            android:layout_weight=".8"/>
		    </TableRow>

		    <TableRow
		        android:id="@+id/TableRow02"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:layout_marginBottom="@dimen/list_elt_spacing" >

		        <TextView
		            android:id="@+id/TextView02"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Orientation Lock"
		            android:textAppearance="?android:attr/textAppearanceSmall"
		            android:layout_weight=".2"/>

		        <Switch
		            android:id="@+id/Switch02"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight=".8"/>
		    </TableRow>
		</TableLayout>

</LinearLayout>