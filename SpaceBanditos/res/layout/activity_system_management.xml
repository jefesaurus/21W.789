<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spacebanditos="http://schemas.android.com/apk/res/com.chipotlebanditos.spacebanditos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/base_background_large">
    <com.chipotlebanditos.spacebanditos.views.LayeredSegmentFillBar
        android:id="@+id/power_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/line_large_half_thickness"
        android:layout_marginTop="@dimen/line_large_half_thickness"
        android:layout_marginRight="@dimen/line_large_half_thickness"
        android:layout_marginBottom="@dimen/line_large_half_thickness"
        spacebanditos:segmentDrawable="@drawable/power_bar_segment_large"
        spacebanditos:baseDirection="bottom"
        spacebanditos:segmentWidth="@dimen/system_management_power_bar_segment_width"
        spacebanditos:segmentHeight="@dimen/system_management_power_bar_segment_height"
        spacebanditos:segmentSpacing="@dimen/line_large_half_thickness"
        android:background="@drawable/base_background_large"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/add_power_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
	        android:layout_marginLeft="@dimen/line_large_half_thickness"
	        android:layout_marginTop="@dimen/line_large_half_thickness"
	        android:layout_marginRight="@dimen/line_large_half_thickness"
	        android:layout_marginBottom="@dimen/line_large_half_thickness"
            android:background="@drawable/button_background_large"
            android:text="+"
	        android:textSize="@dimen/font_size_large"
	        android:textColor="@android:color/black"
	        android:singleLine="true"
	        android:onClick="onAddPowerButtonClick" />
        <Button
            android:id="@+id/remove_power_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
	        android:layout_marginLeft="@dimen/line_large_half_thickness"
	        android:layout_marginTop="@dimen/line_large_half_thickness"
	        android:layout_marginRight="@dimen/line_large_half_thickness"
	        android:layout_marginBottom="@dimen/line_large_half_thickness"
            android:background="@drawable/button_background_large"
            android:text="-"
	        android:textSize="@dimen/font_size_large"
	        android:textColor="@android:color/black"
	        android:singleLine="true"
	        android:onClick="onRemovePowerButtonClick" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
	    <TextView
	        android:id="@+id/system_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/line_large_half_thickness"
	        android:layout_marginTop="@dimen/line_large_half_thickness"
	        android:layout_marginRight="@dimen/line_large_half_thickness"
	        android:layout_marginBottom="@dimen/line_large_half_thickness"
	        android:textSize="@dimen/font_size_large"
	        android:textColor="@android:color/black"
	        android:singleLine="true"
	        android:textIsSelectable="false"
	        android:gravity="center_horizontal"/>
	    <ImageView
	        android:id="@+id/system_icon"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/line_large_half_thickness"
	        android:layout_marginTop="@dimen/line_large_half_thickness"
	        android:layout_marginRight="@dimen/line_large_half_thickness"
	        android:layout_marginBottom="@dimen/line_large_half_thickness"/>
	    <ToggleButton
	        android:id="@+id/repair_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/line_large_half_thickness"
	        android:layout_marginTop="@dimen/line_large_half_thickness"
	        android:layout_marginRight="@dimen/line_large_half_thickness"
	        android:layout_marginBottom="@dimen/line_large_half_thickness"
            android:background="@drawable/button_background_large"
            android:textOn="REPAIR"
            android:textOff="REPAIR"
	        android:textSize="@dimen/font_size_large"
	        android:textColor="@android:color/black"
	        android:singleLine="true"
	        android:onClick="onRepairButtonClick"/>
	    <Button
	        android:id="@+id/target_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/line_large_half_thickness"
	        android:layout_marginTop="@dimen/line_large_half_thickness"
	        android:layout_marginRight="@dimen/line_large_half_thickness"
	        android:layout_marginBottom="@dimen/line_large_half_thickness"
            android:background="@drawable/button_background_large"
            android:text="TARGET"
	        android:textSize="@dimen/font_size_large"
	        android:textColor="@android:color/black"
	        android:singleLine="true"
	        android:onClick="onTargetButtonClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical" >

	    <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/line_large_half_thickness"
	        android:layout_marginTop="@dimen/line_large_half_thickness"
	        android:layout_marginRight="@dimen/line_large_half_thickness"
	        android:layout_marginBottom="@dimen/line_large_half_thickness"
            android:background="@drawable/button_background_large"
            android:text="BACK"
	        android:textSize="@dimen/font_size_large"
	        android:textColor="@android:color/black"
	        android:singleLine="true"
	        android:onClick="onBackButtonClick"/>
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" >
	    <com.chipotlebanditos.spacebanditos.views.LayeredSegmentFillBar
	        android:id="@+id/weapon_charge_bar"
	        android:visibility="gone"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true"
	        android:layout_marginLeft="@dimen/line_large_half_thickness"
	        android:layout_marginTop="@dimen/line_large_half_thickness"
	        android:layout_marginRight="@dimen/line_large_half_thickness"
	        android:layout_marginBottom="@dimen/line_large_half_thickness"
	        spacebanditos:segmentDrawable="@drawable/weapon_charge_bar_segment_large"
	        spacebanditos:baseDirection="bottom"
            spacebanditos:segmentWidth="@dimen/system_management_weapon_charge_bar_segment_width"
            spacebanditos:segmentHeight="@dimen/system_management_weapon_charge_bar_segment_height"
	        spacebanditos:segmentSpacing="@dimen/system_management_weapon_charge_bar_segment_spacing"
	        android:background="@drawable/system_management_weapon_charge_bar_background"/>
	    </RelativeLayout>
    </LinearLayout>
</LinearLayout>